<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Mr Lee</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/">
        <img src="~/img/logo.jpeg" alt="Mr Lee" style="height:28px" />
        <span>Mr Lee</span>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navMain">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class="nav-link" asp-controller="Orders" asp-action="Index">Pedidos</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Inventory" asp-action="Index">Inventario</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Index">Usuarios</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Audit">Bit√°cora</a></li>
      </ul>
      <div class="d-flex align-items-center gap-2 text-white">
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <span class="small">Hola, <strong>@User.Identity!.Name</strong></span>
            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                @Html.AntiForgeryToken()
                <button class="btn btn-outline-light btn-sm" type="submit">Salir</button>
            </form>
        }
      </div>
    </div>
  </div>
</nav>

<main class="container py-4">
    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success">@TempData["Msg"]</div>
    }
    @RenderBody()
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
