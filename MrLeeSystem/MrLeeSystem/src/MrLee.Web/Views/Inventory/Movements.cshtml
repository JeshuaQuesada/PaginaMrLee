@model List<MrLee.Web.Models.StockMovement>
@{
    var p = (MrLee.Web.Models.Product)ViewBag.Product;
    ViewData["Title"] = "Movimientos - " + p.Name;
}

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h2 class="h4 m-0">Movimientos</h2>
    <div class="text-muted">@p.Sku - @p.Name | Existencia: <strong>@p.CurrentStock.ToString("N2")</strong></div>
  </div>
  <div class="d-flex gap-2">
    <a class="btn btn-primary" asp-action="AddMovement" asp-route-id="@p.Id">Agregar movimiento</a>
    <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
  </div>
</div>

<table class="table table-striped table-sm align-middle">
  <thead>
    <tr>
      <th>Fecha (UTC)</th>
      <th>Tipo</th>
      <th class="text-end">Cantidad</th>
      <th>Motivo</th>
      <th>Usuario</th>
    </tr>
  </thead>
  <tbody>
  @foreach (var m in Model)
  {
    <tr>
      <td class="text-nowrap">@m.AtUtc.ToString("yyyy-MM-dd HH:mm")</td>
      <td>@m.Type</td>
      <td class="text-end">@m.Quantity.ToString("N2")</td>
      <td>@m.Reason</td>
      <td>@m.CreatedByEmail</td>
    </tr>
  }
  </tbody>
</table>
