@model MrLee.Web.Controllers.UserEditVm
@{
    ViewData["Title"] = "Editar usuario";
    var roles = (List<MrLee.Web.Models.Role>)ViewBag.Roles;
}

<h2 class="h4">Editar usuario</h2>

<form method="post">
  @Html.AntiForgeryToken()
  <input type="hidden" asp-for="Id" />
  <div asp-validation-summary="All" class="text-danger"></div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <label class="form-label">Nombre completo</label>
      <input asp-for="FullName" class="form-control" />
      <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
      <label class="form-label">Correo</label>
      <input asp-for="Email" class="form-control" />
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <label class="form-label">Rol</label>
      <select asp-for="RoleId" class="form-select">
        @foreach (var r in roles) { <option value="@r.Id">@r.Name</option> }
      </select>
      <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
      <label class="form-label">Estado</label>
      <select asp-for="IsActive" class="form-select">
        <option value="true">Activo</option>
        <option value="false">Inactivo</option>
      </select>
    </div>
  </div>

  <button class="btn btn-primary" type="submit">Guardar</button>
  <a class="btn btn-outline-secondary" asp-action="Index">Volver</a>
</form>
