@model List<MrLee.UI.Models.Producto>
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Gestión de Productos</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error:</strong> @ViewBag.Error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- FORMULARIO CREAR/EDITAR -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@(ViewBag.EditId == null ? "Crear Nuevo Producto" : "Editar Producto")</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Guardar", "Productos", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="codigo">Código:</label>
                            <input type="text" class="form-control" id="codigo" name="codigo" required />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-3">
                            <label for="nombre">Nombre:</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" required />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group mb-3">
                            <label for="categoria">Categoría:</label>
                            <input type="text" class="form-control" id="categoria" name="categoria" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group mb-3">
                            <label for="precio">Precio:</label>
                            <input type="number" class="form-control" id="precio" name="precio" step="0.01" required />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group mb-3">
                            <label for="stock">Stock:</label>
                            <input type="number" class="form-control" id="stock" name="stock" required />
                        </div>
                    </div>
                </div>

                <input type="hidden" id="id" name="id" value="0" />

                <button type="submit" class="btn btn-success">Guardar</button>
                <button type="button" class="btn btn-secondary" onclick="limpiarFormulario()">Limpiar</button>
            }
        </div>
    </div>

    <!-- TABLA DE PRODUCTOS -->
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Listado de Productos (@Model.Count)</h5>
        </div>
        <div class="card-body table-responsive">
            @if (Model.Count > 0)
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Activo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in Model)
                        {
                            <tr>
                                <td>@producto.id_producto</td>
                                <td>@producto.codigo</td>
                                <td>@producto.nombre</td>
                                <td>@producto.categoria</td>
                                <td>¢ @String.Format("{0:N2}", producto.precio)</td>
                                <td>@producto.stock</td>
                                <td>@(producto.activo == true ? "✓" : "✗")</td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-warning" onclick="editarProducto(@producto.id_producto, '@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(producto.codigo))', '@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(producto.nombre))', '@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(producto.categoria))', @producto.precio, @producto.stock)">Editar</button>
                                    <form method="post" action="@Url.Action("Eliminar", "Productos")" style="display:inline;">
                                        <input type="hidden" name="id" value="@producto.id_producto" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro?')">Eliminar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No hay productos registrados.</p>
            }
        </div>
    </div>
</div>

<script>
    function editarProducto(id, codigo, nombre, categoria, precio, stock) {
        document.getElementById('id').value = id;
        document.getElementById('codigo').value = decodeURIComponent(codigo);
        document.getElementById('nombre').value = decodeURIComponent(nombre);
        document.getElementById('categoria').value = decodeURIComponent(categoria);
        document.getElementById('precio').value = precio;
        document.getElementById('stock').value = stock;
        window.scrollTo(0, 0);
    }

    function limpiarFormulario() {
        document.getElementById('id').value = 0;
        document.getElementById('codigo').value = '';
        document.getElementById('nombre').value = '';
        document.getElementById('categoria').value = '';
        document.getElementById('precio').value = '';
        document.getElementById('stock').value = '';
    }
</script>


