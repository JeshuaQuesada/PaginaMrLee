@{
    ViewBag.Title = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var producto = ViewBag.Producto;
}

<div class="container mt-5">
    <h2>Eliminar Producto</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (producto != null)
    {
        <div class="alert alert-warning">
            <p><strong>¿Estás seguro de que quieres eliminar este producto?</strong></p>
        </div>

        <div class="card mb-3">
            <div class="card-body">
                <p><strong>ID:</strong> @producto.id_producto</p>
                <p><strong>Código:</strong> @producto.codigo</p>
                <p><strong>Nombre:</strong> @producto.nombre</p>
                <p><strong>Categoría:</strong> @producto.categoria</p>
                <p><strong>Precio:</strong> ¢ @String.Format("{0:N2}", producto.precio)</p>
                <p><strong>Stock:</strong> @producto.stock</p>
            </div>
        </div>

        @using (Html.BeginForm("Delete", "Productos", FormMethod.Post, new { @class = "mt-3" }))
        {
            <input type="hidden" name="id" value="@producto.id_producto" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            @Html.ActionLink("Cancelar", "Index", new { @class = "btn btn-secondary" })
        }
    }
</div>
